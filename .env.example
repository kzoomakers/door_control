# REST API Configuration
REST_ENDPOINT=http://127.0.0.1:8080
ENABLE_PROXY_DETECTION=false
#ENABLE_PROXIED_SECURIY_KEY=some_unique_key

# API Key for REST API endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your_api_key_here

# Authentication
HTPASSWD=/etc/nginx/.htpasswd

# Flask Secret Key - CHANGE THIS TO A RANDOM STRING
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Docker Update Secret - CHANGE THIS TO A SECURE VALUE
UPDATE_SECRET=your_update_secret_here

# Timezone Configuration
#America/New_York: Eastern Time
#America/Chicago: Central Time
#America/Denver: Mountain Time
#America/Phoenix: Mountain Time (no DST)
#America/Los_Angeles: Pacific Time
#America/Anchorage: Alaska Time
#America/Honolulu: Hawaii-Aleutian Time
#America/Adak: Hawaii-Aleutian Time (with DST)
#UTC: Universal Time Convention
TIMEZONE=America/New_York

# Cache Configuration
# Enable/disable caching (true/false)
CACHE_ENABLED=true
# Cache directory location
CACHE_DIR=/tmp/door_control_cache
# Cache TTL in seconds (default: 1800 = 30 minutes)
CACHE_TTL=1800

# Root Redirect Configuration
# Set to true to redirect / to /accesscontrol/, false to show "It works!" message
ROOT_REDIRECT=false
